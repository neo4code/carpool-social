{
  "name": "carpool-social-server",
  "version": "1.0.0",
  "description": "Backend server for Carpool Social platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && node scripts/setup-production.js",
    "start": "node dist/server.js",
    "db:push": "drizzle-kit push:pg",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "setup:production": "node scripts/setup-production.js"
  },
  "dependencies": {
    "hono": "^4.7.10",
    "@hono/node-server": "^1.12.0",
    "drizzle-orm": "^0.30.10",
    "postgres": "^3.4.4",
    "@neondatabase/serverless": "^0.9.0",
    "jose": "^5.9.6",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.18"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}